% length variable to help with spacing algebra
\newlength{\templen}

% date column type
\newcolumntype{D}{>{\raggedright}l}

% function to create entry
\newcommand{\entry}[4][]
{
  % #1 \\ % position (optional)
  
  % #2 \\ % date
  
  % #3 \\ % company/organization
  
  % #4 \\ % description


  
  \settowidth{\templen}{#2}
  
  \def\temp{#1}\ifx\temp\empty
  
  \begin{tabularx}{\textwidth}{ D  m{420pt} }
    \hspace{-\tabcolsep} #2 & \Large{\textbf{#3}} \\
      & 
      #4
      \\
  \end{tabularx}
  
  \else
  
  \begin{tabularx}{\textwidth}{ D  m{420pt} }
    \hspace{-\tabcolsep} #2 & \Large{\textbf{#1, #3}} \\
      & 
      #4
      \\
  \end{tabularx}
  
  \fi
  
}


