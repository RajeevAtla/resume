ItalicFont = *LightItalic,
BoldItalicFont = *BoldItalic
]

% use serif font as default
\renewcommand{\familydefault}{\sfdefault}

% top and bottom lines
\pagestyle{fancy}
\renewcommand{\headrulewidth}{0.5pt}
\renewcommand{\footrulewidth}{0.5pt}

% page footer is page number (don't need for a single page resume, but you might want it if you have more experience)
% \cfoot{Page \thepage\ / \pageref{LastPage}}

% remove page numbers
\pagenumbering{gobble}

% make math easier to read
\everymath{\displaystyle}

% margins
\geometry{margin = 1in}

% remove section numbers
\setcounter{secnumdepth}{0}

% colors
\definecolor{ghred}{RGB}{189, 44, 0}
\definecolor{linkedin}{RGB}{0, 119, 181}
\definecolor{fb}{RGB}{59, 89, 152}

% spacing variables
\newlength{\separatorcolumnwidth}
\setlength{\separatorcolumnwidth}{0.015\textwidth}

%custom defined sections
\renewcommand{\section}[1]
{
  \addcontentsline{toc}{section}{#1}
  \rule{0.125\textwidth}{0.7ex}
  \hspace{\separatorcolumnwidth}
  {\bfseries \LARGE #1}
  \par
  \vspace{-2\parskip}
}

% margin notes
\setlength{\marginparsep}{-7pt}
\setlength{\marginparwidth}{1.45in}
\setlength{\marginparpush}{0pt}
\setlength{\oddsidemargin}{31pt}

% fix header error
\setlength{\headheight}{25.0pt}
\addtolength{\topmargin}{-13.0pt}

% date column type
\newcolumntype{D}{>{\raggedleft}p{0.13\textwidth}}

% function to create entry
\newcommand{\entry}[4][]
{
  % #1 \\ % position (optional)
  
  % #2 \\ % date
  
  % #3 \\ % company/organization
  
  % #4 \\ % description
  
  \begin{tabularx}{\textwidth}{@{} D  @{} p{\separatorcolumnwidth} @{} m{420pt}}
      \def\temp{#1}\ifx\temp\empty % chktex 1
      #2 & & \Large{\textbf{#3}} \\
      \else
      #2 & & \Large{\textbf{#1, #3}} \\
      \fi
      & & #4
  \end{tabularx}
  \par
  \vspace{-2\parskip}
}


% change bullet style to more sophisticated dot
\renewcommand{\labelitemi}{\faDotCircle[regular]}

